<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="326dp"
        android:layout_height="290dp"
        android:layout_marginHorizontal="32dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textViewSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="SIGN IN"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignIn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Enter your NIM to sign in for this app"
            android:textColor="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputNIM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDescription"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="NIM"
            android:padding="12dp" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputNIM"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_background"
            android:hint="Password"
            android:padding="12dp"
            android:inputType="textPassword" />



        <ImageButton
            android:id="@+id/tombolSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputPassword"
            android:layout_marginTop="12dp"
            android:text="Sign In"
            android:textColor="#FFFF"
            android:src="@drawable/button"
            android:background="@color/white" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tombolSignIn"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textViewAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By clicking continue, you agree to our "
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/termsOfServiceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/textViewAgreement"
                android:text="Terms of Service"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/andTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/termsOfServiceTextView"
                android:text=" and "
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/privacyPolicyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/andTextView"
                android:text="Privacy Policy"
                android:textColor="#000000"
                android:textSize="12sp" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>